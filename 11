#include <stdio.h>
#include <string.h>

void copy_string(char dest[], char src[]) {
    int i;
    int len = strlen(src);

    for (i = 0; i <= len; i++) {
        dest[i] = src[i];
    }
}

int main() {
    char src[100], dest[100];

    printf("Enter a string: ");
    scanf("%s", src);

    copy_string(dest, src);

    printf("Copied string: %s\n", dest);

    return 0;
}
